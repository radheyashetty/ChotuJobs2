rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Any authenticated user can read user profiles, but only the user can modify their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // All authenticated users can read jobs.
    // Only contractors can create jobs.
    // Only the contractor who created the job can update it.
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'contractor';
      allow update: if request.auth != null && resource.data.contractorId == request.auth.uid;
    }

    // All authenticated users can read bids.
    // Laborers and agents can create bids.
    // The contractor who owns the job can update bids (to select a winner).
    match /jobs/{jobId}/bids/{bidId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'labourer' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent');
      allow update: if request.auth != null && get(/databases/$(database)/documents/jobs/$(jobId)).data.contractorId == request.auth.uid;
    }

    // Chats can only be read or written to by the users involved in the chat.
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.userIds;
    }

    // Messages can only be read or written to by the users involved in the chat.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
    }
  }
}
