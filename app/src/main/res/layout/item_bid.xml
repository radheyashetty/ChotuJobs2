<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@color/design_default_color_surface">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bidderNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_on_surface" />

        <TextView
            android:id="@+id/bidAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bidStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_on_surface_variant" />

    </LinearLayout>

    <Button
        android:id="@+id/acceptBidButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View &amp; Accept"
        android:textColor="@android:color/white"
        android:background="@color/design_default_color_primary"
        android:layout_marginEnd="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <Button
        android:id="@+id/rejectBidButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:textColor="@color/design_default_color_on_surface"
        android:background="@color/design_default_color_surface_variant"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

</LinearLayout>
